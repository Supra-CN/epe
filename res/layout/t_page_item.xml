<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <tw.supra.network.ui.NetworkRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="repeat" />
        <!-- app:riv_corner_radius="@dimen/avator_radius" -->
        <!-- android:scaleType="centerCrop" -->
        <!-- app:riv_border_color="#333333" -->
        <!-- app:riv_border_width="2dip" -->

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avator"
            android:layout_toRightOf="@id/avator" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avator"
            android:layout_toRightOf="@id/avator" />
    </RelativeLayout>

    <tw.supra.network.ui.NetworkImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_transparent"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/drawable_padding" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="@dimen/drawable_padding" />
    </LinearLayout>

</LinearLayout>