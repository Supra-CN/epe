<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/epe_wave_item_v_padding" >

    <ImageView
        android:id="@+id/dot"
        android:layout_width="@dimen/epe_wave_item_p_size"
        android:layout_height="@dimen/epe_wave_item_p_size"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_near_store_bottom_item_bg"
        android:gravity="center"
        android:textSize="@dimen/epe_home_item_text"
        android:lines="2"
        android:textColor="@android:color/white" />

    <TextView
        android:textSize="@dimen/epe_home_item_text"
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white" />

</LinearLayout>